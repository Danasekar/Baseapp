<!DOCTYPE html>
<html>
  <head>
    <title>Log</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
 
 
<div class = "log">
  <% if current_user %>
  		Logged in as <%= current_user.email %>
  		<%=	 link_to "Logout", session_path("current"), method: "delete", style: 'color:#FFFFFF'%>
  <% else %>

  		<%=	 link_to "Sign Up", new_user_path, style: 'color:#FFFFFF' %> |
  		<%=	 link_to "Log In", new_session_path, style: 'color:#FFFFFF' %>
 <% end %>

</div>

    <%= yield %>
  </body>
</html>
