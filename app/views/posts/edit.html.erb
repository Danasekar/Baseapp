<body class = "post_new">
<h1>Edit</h1>

<%= form_for @post do |f| %>
<p>
  <%= f.label  :Title %><br>
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label  :"Content" %><br>
  <%= f.text_area :content, :class => "textarea"%>
</p>

<p>
   <%= f.submit :Done, :class => "button" %>
</p>

<% end %>
</body>